{% extends "layout.html.twig" %}

{% block title 'Admin articles' %}
    {% block p '' %}


{% block content %}
    <h2>Articles</h2>
    <p><a href="{{ path('admin_article_edit') }}">Ajouter un article</a></p><br>
    <table class="table">
        <tr>
            <th>Titre</th>
            <th>Contenu</th>            
            <th>Résumé</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.shortContent }}</td>
                <td><img src="{{ asset('img/' ~ article.img) }}" width="130" height="90"></td>
                <td>
                    <a href="{{ path('admin_article_edit', { id: article.id }) }}" class="btn btn-primary">
                        Modifier
                    </a>

                    <a href="{{ path('admin_article_delete', { id: article.id }) }}" class="btn btn-danger">
                       Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun Résultat</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/adminArticle.css')}}"/>
    <link rel="stylesheet" href="{{asset('css/admin.css')}}"/>

{% endblock %}