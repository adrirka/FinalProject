{% extends "layout.html.twig" %}

{% block title 'gallerys' %}

{% block page_title 'Galerie' %}
{% block p '' %}

    
{% block content %}
    <h2>Galerie</h2>
      <table class="table">
        <tr>
            <th width="200px"></th>
        </tr>
        {% for gallery in gallerys %}     
            
                <img class="myImg" src="{{ asset('img/' ~ gallery.img) }}" width="600" height="400">
            
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun RÃ©sultat</td>
            </tr>
        {% endfor %}
    </table>

    <!-- La Modale -->
    <div id="myModal" class="modal">

    <!-- Le bouton de fermeture -->
    <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>

    <!-- Contenu de la modale -->
    <img class="modal-content" id="img01">
                
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        // Obtenir une modale
        var modal = document.getElementById('myModal');

        // Afficher l'image dans la modale
        var img = document.getElementById('myImg');
        var modalImg = document.getElementById("img01");
        
        $('.myImg').click(function(event){
            var $this = $(this);
            modal.style.display = "block";
            modalImg.src = $this.attr('src');
        });

        // Afficher la croix de fermeture de la modale
        var span = document.getElementsByClassName("close")[0];

        // Fermeture de la modale au clic sur la croix
        span.onclick = function() { 
            modal.style.display = "none";
        }
    </script>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset ('css/gallery.css')}}"/>
{% endblock %}