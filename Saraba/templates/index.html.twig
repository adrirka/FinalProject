{% extends "layout.html.twig" %}
{% block page_boutton %}
    <a href="{{ path('action') }}">Nos Actions</a>
    <a href="{{ path('actu') }}">Nos News</a>
{% endblock %}

{% block content %}
    
<section class="col-md-6" id="contact">
                <h2>Nous contacter</h2>
                <form class="form-vertical" method="post" id="form_contact">
                        <article class="form-group">
                            <label class="control-label col-sm-12" for="userName">Votre nom : <b></b> </label>
                                <input class="col-sm-6 form-control" type="text" id="userName" name="name" placeholder="Votre Nom">
                        </article>

                        <article class="form-group">
                            <label class="control-label col-sm-12" for="userEmail">Votre email : <b></b> </label>
                                <input class="col-sm-6 form-control" type="email" id="userEmail" name="email" placeholder="Votre Email">
                        </article>

                        <article class="form-group">
                            <label class="control-label col-sm-12" for="userSubject">Choisir un sujet : <b></b> </label>
                                <div class="col-sm-6 form-control">
                                    <select  id="userSubject" name="subject">
                                        <option value="rdv">Demande d'information</option>
                                        <option value="projet_sejour_de_rupture">Inscription sejour de rupture</option>
                                        <option value="atelier_therapeutique">Atelier thérapetique</option>
                                    </select>
                                </div>
                        </article>

                        <article class="form-group">
                            <label class="control-label col-sm-12" for="userMessage">Votre message : <b></b> </label>
                                <textarea class="col-sm-6 form-control" id="userMessage" name="message" placeholder="Votre Message"></textarea>
                        </article>

                        <div class="col-sm-12">
                            <input class="btn btn-success" type="submit" value="Envoyer">
                        </div>

                    </form>
                </section>

                <section class="col-md-6" id="donation">
                    <h2>Faites un don</h2>

                    <p>Nous avons besoin de VOUS pour mettre en oeuvre nos projets !</p><br>

                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="RUHFJ3NPKSCJN">
                    <input type="image" src="https://www.paypalobjects.com/fr_FR/FR/i/btn/btn_donateCC_LG.gif"  border="0" name="submit" alt="PayPal, le réflexe sécurité pour payer en ligne">
                    <img alt="" border="0" src="https://www.paypalobjects.com/fr_FR/i/scr/pixel.gif" width="1" height="1">
                    </form>
                </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>var ajaxUrl = '{{ path('home_ajax') }}'</script>
    <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}


{% endblock %}